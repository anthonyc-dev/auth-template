model StudentEnrollment {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  studentNumber  String?      // optional since not provided
  department     String
  yearLevel      String
  semester       String
  academicYear   String
  selectedCourses String[]    // list of selected courses
  totalUnits     Int
  createdAt      DateTime @default(now())
}
